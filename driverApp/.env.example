# ============================================
# WaterGo Driver App - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
#
# IMPORTANT: Never commit .env file to git!
# Add .env to .gitignore
#
# For production deployment:
# 1. Create .env.production with production values
# 2. Use EAS Secrets for sensitive data
# ============================================

# ============================================
# Environment Configuration
# ============================================
# Options: development | staging | production
EXPO_PUBLIC_ENVIRONMENT=development

# App environment
EXPO_PUBLIC_APP_ENV=development

# ============================================
# Supabase Configuration
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Production Supabase URL (format: https://xxxxx.supabase.co)
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon/Public Key (safe to expose in client)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Supabase Service Role Key (NEVER expose in client - backend only)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# API Configuration
# ============================================
# Production API URL
EXPO_PUBLIC_API_URL=https://api.watergo.uz

# Staging API URL (for testing)
EXPO_PUBLIC_STAGING_API_URL=https://staging-api.watergo.uz

# ============================================
# Crash Reporting & Monitoring
# ============================================
# Sentry DSN - Get from https://sentry.io/settings/projects/
# Format: https://xxxxx@oxxxxx.ingest.sentry.io/xxxxx
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry Environment
EXPO_PUBLIC_SENTRY_ENVIRONMENT=development

# Enable/disable Sentry
EXPO_PUBLIC_SENTRY_ENABLED=false

# ============================================
# Expo Configuration
# ============================================
# Expo Project ID - Get from https://expo.dev/accounts/[account]/projects/[project]/settings
EXPO_PUBLIC_PROJECT_ID=your-expo-project-id

# Expo Updates Channel (for OTA updates)
EXPO_PUBLIC_UPDATES_CHANNEL=production

# ============================================
# Push Notifications
# ============================================
# Firebase Cloud Messaging (Android)
# Get from Firebase Console > Project Settings > Cloud Messaging
EXPO_PUBLIC_FCM_SERVER_KEY=your-fcm-server-key

# Apple Push Notification Service (iOS)
# Configure in Apple Developer Portal
EXPO_PUBLIC_APNS_KEY_ID=your-apns-key-id
EXPO_PUBLIC_APNS_TEAM_ID=your-apple-team-id

# ============================================
# Maps & Navigation
# ============================================
# Google Maps API Key - Get from https://console.cloud.google.com/
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Yandex Maps API Key - Get from https://developer.tech.yandex.ru/
EXPO_PUBLIC_YANDEX_MAPS_API_KEY=your-yandex-maps-api-key

# ============================================
# Development Options
# ============================================
# Skip authentication in dev mode (true/false)
EXPO_PUBLIC_SKIP_AUTH=false

# Use mock data instead of real API (true/false)
EXPO_PUBLIC_USE_MOCK_DATA=false

# Use local backend (http://localhost:3001/api or 10.0.2.2 on Android)
EXPO_PUBLIC_USE_LOCAL_BACKEND=false

# Enable debug logging (true/false)
EXPO_PUBLIC_DEBUG_MODE=true

# ============================================
# Analytics (Optional)
# ============================================
# Enable analytics tracking
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Google Analytics / Firebase Analytics
EXPO_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id

# ============================================
# Feature Flags
# ============================================
# Enable/disable specific features
EXPO_PUBLIC_ENABLE_REAL_TIME_TRACKING=true
EXPO_PUBLIC_ENABLE_BACKGROUND_LOCATION=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# ============================================
# App Store Metadata
# ============================================
# App Version (auto-incremented by EAS)
# EXPO_PUBLIC_APP_VERSION=1.0.0

# App Build Number
# EXPO_PUBLIC_BUILD_NUMBER=1

# ============================================
# Support & Contact
# ============================================
EXPO_PUBLIC_SUPPORT_EMAIL=support@watergo.uz
EXPO_PUBLIC_SUPPORT_PHONE=+998901234567
